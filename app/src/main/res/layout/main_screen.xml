<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/place_icon"
        android:layout_width="@dimen/widht"
        android:layout_height="@dimen/height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/add_end"
        android:layout_marginLeft="@dimen/margin_start"
        android:layout_marginRight="@dimen/margin_start"
        android:layout_marginTop="@dimen/add_end"
        android:background="@drawable/icon"
        android:contentDescription="@string/place_icon"
        android:padding="@dimen/add_end"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/place_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/color_primary_text"
        android:textSize="16sp"
        android:paddingLeft="@dimen/to"
        android:paddingRight="@dimen/to"
        tools:text="Find It"/>

</LinearLayout>